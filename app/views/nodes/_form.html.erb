<%= form_for(@node) do |f| %>
  <h1><%= f.text_field :name %></h1>
  <div class="field">
    <%= f.label :category %><br/>
    <%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name) %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>

  <div class="field">
    <%= f.submit %>
  </div>
<% end %>